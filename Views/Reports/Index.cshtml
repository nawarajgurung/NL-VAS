@model PagedList.PagedList<NL_VAS.ViewModel.RatingViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}


<div class="row">
    <div class="col-12">
        <div class="card-box">
            <div class="row">
                <div class="col-sm-6">
                    <div class="m-b-30">
                    </div>
                </div>
            </div>

            <div class="table-rep-plugin">
                <div class="table-responsive" data-pattern="priority-columns">
                    <table class="table table-striped add-edit-table" id="datatable-editable">
                        <thead>
                            <tr>
                                <th>
                                    Parcel Number
                                </th>
                                <th>
                                    Owner Name
                                </th>
                                <th>
                                   Total
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ParcelNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OwnerName)
                                    </td>
                                    <td>
                                       @Html.ActionLink("Report","Details","Reports",new { id = item.id },null)
                                    </td> 
                                </tr>
                            }

                        </tbody>
                    </table>

                    <div class="col-center">
                        @Html.PagedListPager(Model, page => Url.Action("Index", "Reports", new { page, pageSize = Model.PageSize }))
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>